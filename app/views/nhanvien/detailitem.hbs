                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                      <div class="col-md-3 col-sm-3 col-xs-12 profile_left">
                          <div class="profile_img">
                              <div id="crop-avatar">
                                  <!-- Current avatar -->
                                  <img class="img-responsive avatar-view" src="{{CurrentProduct.urlimage}}" alt="Avatar">
                              </div>
                          </div>
                          <h3>{{CurrentProduct.name}}</h3>
                                        
                    </div>
                    <div class="col-md-9 col-sm-9 col-xs-12"> 
                    <div id="collapseOne1" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                    <form action="/listproducts/delete/success" method="POST" class="form-horizontal form-label-left" novalidate>

                     
                      <span class="section">Thông tin chi tiết sản phẩm</span>
                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Mã Sản Phẩm 
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input id="name" readonly class="form-control col-md-7 col-xs-12"  value="{{CurrentProduct.id}}"  name="masanpham"  required type="text">
                        </div>
                      </div>

                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Tên Sản Phẩm
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input id="name" readonly class="form-control col-md-7 col-xs-12"  value="{{CurrentProduct.name}}"  name="name"  required type="text">
                        </div>
                      </div>

                      <div class="item form-group">
                        
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Loại Sản Phẩm 
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-6">
                         <input id="loaisp" readonly class="form-control col-md-7 col-xs-12"  value="{{CurrentProduct.namecategory}}"  name="loaisp"  required type="text">
                        </div>
                    
                      </div>


                     
                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Giá Gốc Sản Phẩm
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input id="loaisp" readonly class="form-control col-md-7 col-xs-12"  value="{{CurrentProduct.price}}"  name="loaisp"  required type="text">
                        </div>
                      </div>
                     
                      
                     <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="occupation">Ngày Nhập Sản Phẩm
                        </label>
                      <div class="col-md-6 col-sm-6 col-xs-6">
                         <input id="loaisp" readonly class="form-control col-md-7 col-xs-12"  value="{{CurrentProduct.dateadd}}"  name="loaisp"  required type="text">
                      </div>
                      </div>

                      <div class="item form-group">
                        
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Tình Trạng Sản Phẩm 
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-6">
                         <input id="loaisp" readonly class="form-control col-md-7 col-xs-12"  value="{{CurrentProduct.namestatus}}"  name="loaisp"  required type="text">
                        </div>
                    
                      </div>
                      
                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="telephone">Số Lượng Sản Phẩm
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                       <input id="loaisp" readonly class="form-control col-md-7 col-xs-12"  value="{{CurrentProduct.quantity}}"  name="loaisp"  required type="text">
                        </div>
                      </div>
                       
                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="textarea">Mô tả sản phẩm
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <textarea readonly id="textarea"  name="description" class="form-control col-md-7 col-xs-12">{{CurrentProduct.description}}</textarea>
                        </div>
                      </div>
                      <div class="ln_solid"></div>
                      <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                         
                          <button type="submit" class="btn btn-danger">Xóa Sản Phẩm</button>
                        </div>
                      </div>
                    </form>
                  </div>
                  </div>
                  </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
